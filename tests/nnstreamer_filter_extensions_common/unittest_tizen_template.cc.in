    EXPECT_EQ (ret, 0);

    /** get input/output dimension unsuccessfully */
    ret = sp->getInputDimension (&prop, &data, NULL);
    EXPECT_NE (ret, 0);

    ret = sp->getOutputDimension (&prop, &data, NULL);
    EXPECT_NE (ret, 0);

    sp->close (&prop, &data);
  }

  g_strfreev (model_files);
}

